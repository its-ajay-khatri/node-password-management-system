<%- include('header') %>

    <div class="container">
        <div class="row">
            <h1>Password Category Lists</h1>
            <table class="table">
                <thead>
                  <tr>
                    <th>Password Category Name</th>
                
                    <th>Action</th>
                  </tr>
                  <% if(records.length > 0){ 
                    records.forEach(function(row){  %>
                    <tr> 
                      <td><%= row.password_category %></td>
                      
                      <td><a class="btn btn-primary btn-xs" href="/passwordcategory/edit/<%= row._id %>"><i class="fa fa-edit"></i></a>
                      <a class="btn btn-danger btn-xs" href="/passwordcategory/delete/<%= row._id %>" onclick="return confirm('Are you sure you want to delete?');"><i class="fa fa-trash"></i></a></td>
                    </tr>
                  <%  }) } %>
                </thead>
            </table>
        </div>  
    </div>
  </body>
</html>
