<%- include('header') %>

    <div class="container">
        <div class="row">
            <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="panel-title">Add new Password</div>
                         </div>  
                    <div class="panel-body" >
                        <form action="/edit-password/edit/<%= records1._id %>" id="passwordform" class="form-horizontal" method="post">
                           <input type="hidden" value="<%= id %>" name="id" >
                            <div class="form-group">
                                <label for="username" class="col-md-3 control-label">Password Details</label>
                                <div class="col-md-9">
                                    <select class="form-control" name="pass_cat">
                                        <option value="">Choose password Cateogry</option>
                                        <% if(records.length>0){ 
                                            records.forEach(function(row){ %>
                                        <option value="<%= row.password_category %>" <% if(row.password_category == records1.password_category){  %> selected <% } %> ><%= row.password_category %></option>
                                        <% }) } %>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="username" class="col-md-3 control-label">Project Name</label>
                                <div class="col-md-9">
                                    <input type="textbox" class="form-control" name="project_name" placeholder="Enter you Project Name" value="<%= records1.project_name %>">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="username" class="col-md-3 control-label">Password Detail</label>
                                <div class="col-md-9">
                                    <textarea type="text" class="form-control" id="editor" name="pass_details" rows="5" placeholder="Enter you password Detail"><%= records1.password_detail %></textarea>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <!-- Button -->                                        
                                <div class="col-md-offset-3 col-md-9">
                                <input type="submit" name="submit" value="Update Password" class="btn btn-primary">   
                                </div>
                            </div>                         
                        </form>
                        <p><a href="/view-all-password">Update Password Lists</a></p> 
                     </div>
                </div>          
          </div> 
        </div>
      </div>
      <script>
        CKEDITOR.replace( 'editor' );
    </script>
  </body>
</html>
